<div class="container text-center">
    <h1>Burgers</h1>
    <img src="/assets/image/burger.png" alt="burger Image" width="60%">

    <h2 class="ready">Ready To Eat Burgers:</h2>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>

    <h2 class="ready">Eaten Burgers:</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>

    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>